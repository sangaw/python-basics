# Userful Python commands when setting up a new environment

conda create --name <env_name> # python=<python_version>
conda activate <environment-name>
conda info --envs
conda deactivate

# Python Installations for data science projects
conda install numpy
conda install scikit-learn
conda install scikit-learn=1.2.2
conda install scipy

# pip command to create env
python3 -m venv enexis-model-run-rd

# For Enexis Env
conda create -n model-run-tf_env python=3.10
conda install numpy=1.26.4
conda install pandas matplotlib scipy scikit-learn statsmodels xgboost joblib
conda install -c conda-forge prophet
conda install polars
conda install -c conda-forge icecream
conda install -c conda-forge tensorflow

conda create --name new_env_name --clone old_env_name




